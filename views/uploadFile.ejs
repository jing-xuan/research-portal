<!DOCTYPE html>
<html>
<head>
    <title>Upload Project</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
</head>
  <style>
    body{
      padding: 15px;
    }
    h1{
      font-family: sans-serif;
      font-size: 40px;
      float: left;
      margin: 0;
    }
    #top{
      display: inline-block;
      width: 100%;
      position: relative;
    }
    .links{
      float: right;
      position: absolute;
      bottom: 0;
      right: 0;
      font-family: sans-serif;
    }
    a{
      text-decoration: none;
      color: black;
    }
    a:hover{
      color: #009a90;
    }
    input[type = 'text']{
      width: 250px;
      font-size: 15px;
    }
    label{
      display: inline-block;
      font-family: sans-serif;
      margin-right: 10px;
    }
    select{
      font-size: 15px;
    }
    form{
      margin: 0 auto;
      width: 500px;
      padding: 15px;
      font-size: 20px;
      border-style: solid;
      border-width: 1px;
      border-radius: 5px;
    }
    td{
      padding-top: 10px;
    }
    table{
      padding-bottom: 10px;
    }

  </style>
  <body>
  <div id = "top">
    <h1>Research Portal</h1>
    <span class = "links">
      <a href = "/submit">Submit Project</a> |
      <a href = "/home">Find Projects</a>
    </span>
  </div><br>
  <hr>
  <br>
  <form action="/upload" enctype="multipart/form-data" method="post">
    <label for = "number" >Number of Group Members:</label>
    <select id = "no" name = "number">
      <option value = "1">1</option>
      <option value = "2">2</option>
      <option value = "3">3</option>
      <option value = "4">4</option>
    </select><br>
    <table>
      <tr id = "s1">
        <td>
          <label for = "Student1">Member 1: </label>
        </td><td>
          <input type = "text" name = "Student1">
        </td>
      </tr>
      <tr id = "s2" hidden>
        <td>
          <label for = "Student2">Member 2: </label>
        </td><td>
          <input type = "text" name = "Student2">
        </td>
      </tr>
      <tr id= "s3" hidden>
        <td>
          <label for = "Student3">Member 3: </label>
        </td><td>
          <input type = "text" name = "Student3">
        </td>
      </tr>
      <tr id = "s4" hidden>
        <td>
          <label for = "Student4">Member 4: </label>
        </td><td>
          <input type = "text" name = "Student4">
        </td>
      </tr>
      <tr>
        <td>
          <label for = "title">Project Title: </label>
        </td><td>
          <input type = "text" name = "Title">
        </td>
      </tr>
      <tr>
        <td>
          <label for = "Code">Project Code: </label>
        </td><td>
          <input type = "text" name = "Code"><br>
        </tr>
    </table>
    <input type="file" name="upload" multiple>
    <input type="submit" value="Upload">
  </form>
  <script>
  jQuery(document).ready(function($){
    $("#no").change(function(){
      switch ($("#no").val()) {
        case '1':
        $("#s2").hide();
        $("#s3").hide();
        $("#s4").hide();
          break;
        case '2':
        $("#s2").show();
        $("#s3").hide();
        $("#s4").hide();
          break;
        case '3':
        $("#s2").show();
        $("#s3").show();
        $("#s4").hide();
          break;
        case '4':
        $("#s2").show();
        $("#s3").show();
        $("#s4").show();
          break;
        default:
        $("#s2").hide();
        $("#s3").hide();
        $("#s4").hide();
      }
    })
  });
  </script>
</body>
</html>
